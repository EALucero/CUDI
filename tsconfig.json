{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cudi/domain/*": ["domain/src/*"],
      "@cudi/backend/*": ["apps/backend/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}