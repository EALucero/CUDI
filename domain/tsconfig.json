{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "types": ["vitest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@cudi/domain/*": ["domain/src/*"],
      "@cudi/backend/*": ["apps/backend/src/*"]
    }
  },
  "include": ["src"]
}